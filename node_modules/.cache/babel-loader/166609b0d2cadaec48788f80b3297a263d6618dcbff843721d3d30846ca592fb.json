{"ast":null,"code":"import { computed } from \"vue\";\nimport { useStore } from \"vuex\";\nimport { useRoute } from \"vue-router\";\nimport { useCommonCartEffect } from \"./commonCartEffect\";\n\n//获取购物车信息逻辑\nconst useCartEffect = shopId => {\n  const {\n    changeCartItemInfo\n  } = useCommonCartEffect();\n  const store = useStore();\n  const cartList = store.state.cartList;\n  //计算购物车上的件数\n  const total = computed(() => {\n    const productList = cartList[shopId];\n    let count = 0;\n    if (productList) {\n      for (let i in productList) {\n        const product = productList[i];\n        count += product.count;\n      }\n    }\n    return count;\n  });\n  //计算总计价格\n  const price = computed(() => {\n    const productList = cartList[shopId];\n    let count = 0;\n    if (productList) {\n      for (let i in productList) {\n        const product = productList[i];\n        if (product.check) {\n          count += product.count * product.price;\n        }\n      }\n    }\n    return count.toFixed(2);\n  });\n  const allChecked = computed(() => {\n    const productList = cartList[shopId];\n    let result = true;\n    if (productList) {\n      for (let i in productList) {\n        const product = productList[i];\n        if (product.count > 0 && !product.check) {\n          result = false;\n        }\n      }\n    }\n    return count.toFixed(2);\n  });\n  const productList = computed(() => {\n    const productList = cartList[shopId] || [];\n    return productList;\n  });\n  const changeCartItemChecked = (shopId, productId) => {\n    store.commit(\"changeCartItemChecked\", {\n      shopId,\n      productId\n    });\n  };\n  const cleanCartProducts = shopId => {\n    store.commit(\"cleanCartProducts\", {\n      shopId\n    });\n  };\n  return {\n    price,\n    total,\n    productList,\n    changeCartItemInfo,\n    changeCartItemChecked,\n    cleanCartProducts\n  };\n};\nexport default {\n  name: \"Cart\",\n  setup() {\n    const route = useRoute();\n    const shopId = route.params.id;\n    const {\n      total,\n      price,\n      productList,\n      changeCartItemInfo,\n      changeCartItemChecked,\n      cleanCartProducts\n    } = useCartEffect(shopId);\n    return {\n      total,\n      price,\n      productList,\n      changeCartItemInfo,\n      shopId,\n      changeCartItemChecked,\n      cleanCartProducts\n    };\n  }\n};","map":{"version":3,"names":["computed","useStore","useRoute","useCommonCartEffect","useCartEffect","shopId","changeCartItemInfo","store","cartList","state","total","productList","count","i","product","price","check","toFixed","allChecked","result","changeCartItemChecked","productId","commit","cleanCartProducts","name","setup","route","params","id"],"sources":["F:\\Web2022\\week23-25\\shengxian\\src\\views\\shop\\Cart.vue"],"sourcesContent":["<template>\r\n  <div class=\"cart\">\r\n    <div class=\"product\">\r\n      <div class=\"product__header\">\r\n        <div class=\"product__header__all\">\r\n          <span class=\"product__header__icon iconfont\">&#xe600;</span>\r\n          全选\r\n        </div>\r\n        <div\r\n          class=\"product__header__clear\"\r\n          @click=\"() => cleanCartProducts(shopId)\"\r\n        >\r\n          清空购物车\r\n        </div>\r\n      </div>\r\n      <template v-for=\"item in productList\" :key=\"item._id\">\r\n        <div class=\"product__item\" v-if=\"item.count > 0\">\r\n          <div\r\n            class=\"product__item__checked iconfont\"\r\n            v-html=\"item.check ? '&#xe600;' : '&#xe66c;'\"\r\n            @click=\"() => changeCartItemChecked(shopId, item._id)\"\r\n          ></div>\r\n          <img class=\"product__item__img\" :src=\"`${item.imgUrl}`\" />\r\n          <div class=\"product__item__detail\">\r\n            <h4 class=\"product__item__title\">{{ item.name }}</h4>\r\n            <p class=\"product__item__price\">\r\n              <span class=\"product__item__yen\">&yen;</span>{{ item.price }}\r\n              <span class=\"product__item__origin\"\r\n                >&yen;{{ item.oldPrice }}</span\r\n              >\r\n            </p>\r\n          </div>\r\n          <div class=\"product__number\">\r\n            <span\r\n              class=\"product__number__minus\"\r\n              @click=\"\r\n                () => {\r\n                  changeCartItemInfo(shopId, item._id, item, -1);\r\n                }\r\n              \"\r\n              >-</span\r\n            >\r\n            {{ item.count || 0 }}\r\n            <span\r\n              class=\"product__number__plus\"\r\n              @click=\"\r\n                () => {\r\n                  changeCartItemInfo(shopId, item._id, item, 1);\r\n                }\r\n              \"\r\n              >+</span\r\n            >\r\n          </div>\r\n        </div>\r\n      </template>\r\n    </div>\r\n    <div class=\"check\">\r\n      <div class=\"check__icon\">\r\n        <img\r\n          src=\"http://www.dell-lee.com/imgs/vue3/basket.png\"\r\n          class=\"check__icon__img\"\r\n        />\r\n        <div class=\"check__icon__tag\">{{ total }}</div>\r\n      </div>\r\n      <div class=\"check__info\">\r\n        总计：<span class=\"check__info__price\">&yen; {{ price }}</span>\r\n      </div>\r\n      <div class=\"check__btn\">去结算</div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { computed } from \"vue\";\r\nimport { useStore } from \"vuex\";\r\nimport { useRoute } from \"vue-router\";\r\nimport { useCommonCartEffect } from \"./commonCartEffect\";\r\n\r\n//获取购物车信息逻辑\r\nconst useCartEffect = (shopId) => {\r\n  const { changeCartItemInfo } = useCommonCartEffect();\r\n\r\n  const store = useStore();\r\n  const cartList = store.state.cartList;\r\n  //计算购物车上的件数\r\n  const total = computed(() => {\r\n    const productList = cartList[shopId];\r\n    let count = 0;\r\n    if (productList) {\r\n      for (let i in productList) {\r\n        const product = productList[i];\r\n        count += product.count;\r\n      }\r\n    }\r\n    return count;\r\n  });\r\n  //计算总计价格\r\n  const price = computed(() => {\r\n    const productList = cartList[shopId];\r\n    let count = 0;\r\n    if (productList) {\r\n      for (let i in productList) {\r\n        const product = productList[i];\r\n        if (product.check) {\r\n          count += product.count * product.price;\r\n        }\r\n      }\r\n    }\r\n    return count.toFixed(2);\r\n  });\r\n  const allChecked = computed(() => {\r\n    const productList = cartList[shopId];\r\n    let result = true;\r\n    if (productList) {\r\n      for (let i in productList) {\r\n        const product = productList[i];\r\n        if (product.count>0&&!product.check) {\r\n          result=false\r\n        }\r\n      }\r\n    }\r\n    return count.toFixed(2);\r\n  });\r\n\r\n  const productList = computed(() => {\r\n    const productList = cartList[shopId] || [];\r\n    return productList;\r\n  });\r\n  const changeCartItemChecked = (shopId, productId) => {\r\n    store.commit(\"changeCartItemChecked\", {\r\n      shopId,\r\n      productId,\r\n    });\r\n  };\r\n  const cleanCartProducts = (shopId) => {\r\n    store.commit(\"cleanCartProducts\", { shopId });\r\n  };\r\n  return {\r\n    price,\r\n    total,\r\n    productList,\r\n    changeCartItemInfo,\r\n    changeCartItemChecked,\r\n    cleanCartProducts,\r\n  };\r\n};\r\n\r\nexport default {\r\n  name: \"Cart\",\r\n  setup() {\r\n    const route = useRoute();\r\n    const shopId = route.params.id;\r\n    const {\r\n      total,\r\n      price,\r\n      productList,\r\n      changeCartItemInfo,\r\n      changeCartItemChecked,\r\n      cleanCartProducts,\r\n    } = useCartEffect(shopId);\r\n    return {\r\n      total,\r\n      price,\r\n      productList,\r\n      changeCartItemInfo,\r\n      shopId,\r\n      changeCartItemChecked,\r\n      cleanCartProducts,\r\n    };\r\n  },\r\n};\r\n</script>\r\n\r\n\r\n\r\n<style lang=\"scss\" scoped>\r\n@import \"../../style/viriables.scss\";\r\n@import \"../../style/mixins.scss\";\r\n\r\n.cart {\r\n  position: absolute;\r\n  left: 0;\r\n  right: 0;\r\n  bottom: 0;\r\n}\r\n.product {\r\n  overflow-y: scroll;\r\n  flex: 1;\r\n  background: #fff;\r\n  &__header {\r\n    display: flex;\r\n    line-height: 0.52rem;\r\n    font-size: 0.14rem;\r\n    color: #333;\r\n    border-bottom: 0.01rem solid #f1f1f1;\r\n    &__all {\r\n      width: 0.64rem;\r\n      margin-left: .18rem;\r\n    }\r\n    &__icon{\r\n        color: #0091FF ;\r\n        font-size: .2rem;\r\n    }\r\n    &__clear {\r\n      flex: 1;\r\n      margin-right: 0.16rem;\r\n      text-align: right;\r\n    }\r\n  }\r\n  &__item {\r\n    position: relative;\r\n    display: flex;\r\n    padding: 0.12rem 0;\r\n    margin: 0 0.16rem;\r\n    border-bottom: 0.01rem solid $content-bgColor;\r\n    &__checked {\r\n      line-height: 0.5rem;\r\n      margin-right: 0.2rem;\r\n      color: #0091ff;\r\n      font-size: 0.2rem;\r\n    }\r\n    &__detail {\r\n      overflow: hidden;\r\n    }\r\n    &__img {\r\n      width: 0.46rem;\r\n      height: 0.46rem;\r\n      margin-right: 0.16rem;\r\n    }\r\n    &__title {\r\n      margin: 0;\r\n      line-height: 0.2rem;\r\n      font-size: 0.14rem;\r\n      color: $content-fontcolor;\r\n      @include ellipsis;\r\n    }\r\n\r\n    &__price {\r\n      margin: 0.06rem 0 0 0;\r\n      line-height: 0.2rem;\r\n      font-size: 0.14rem;\r\n      color: $hightlight-fontColor;\r\n    }\r\n    &__yen {\r\n      font-size: 0.12rem;\r\n    }\r\n    &__origin {\r\n      margin-left: 0.06rem;\r\n      line-height: 0.2rem;\r\n      font-size: 0.12rem;\r\n      color: $light-fontColor;\r\n      text-decoration: line-through;\r\n    }\r\n    .product__number {\r\n      position: absolute;\r\n      right: 0rem;\r\n      bottom: 0.12rem;\r\n      &__minus,\r\n      &__plus {\r\n        display: inline-block;\r\n        width: 0.2rem;\r\n        height: 0.2rem;\r\n        line-height: 0.16rem;\r\n        border-radius: 50%;\r\n        font-size: 0.2rem;\r\n        text-align: center;\r\n      }\r\n      &__minus {\r\n        border: 0.01rem solid $medium-fontColor;\r\n        color: $medium-fontColor;\r\n        margin-right: 0.05rem;\r\n      }\r\n      &__plus {\r\n        background: $btn-bgColor;\r\n        color: $bgColor;\r\n        margin-left: 0.05rem;\r\n      }\r\n    }\r\n  }\r\n}\r\n.check {\r\n  display: flex;\r\n  height: 0.49rem;\r\n  border-top: 0.01rem solid $content-bgColor;\r\n  line-height: 0.49rem;\r\n  &__icon {\r\n    position: relative;\r\n    width: 0.84rem;\r\n    &__img {\r\n      display: block;\r\n      margin: 0.12rem auto;\r\n      width: 0.28rem;\r\n      height: 0.26rem;\r\n    }\r\n    &__tag {\r\n      position: absolute;\r\n      left: 0.46rem;\r\n      top: 0.04rem;\r\n      padding: 0 0.04rem;\r\n      min-width: 0.2rem;\r\n      height: 0.2rem;\r\n      line-height: 0.2rem;\r\n      border-radius: 0.1rem;\r\n      font-size: 0.12rem;\r\n      text-align: center;\r\n      background-color: $hightlight-fontColor;\r\n      color: #fff;\r\n      transform: scale(0.5, 0.5);\r\n      transform-origin: left center;\r\n    }\r\n  }\r\n  &__info {\r\n    flex: 1;\r\n    color: $content-fontcolor;\r\n    font-size: 0.12rem;\r\n    &__price {\r\n      color: $hightlight-fontColor;\r\n      font-size: 0.18rem;\r\n    }\r\n  }\r\n  &__btn {\r\n    width: 0.98rem;\r\n    background: #4fb0f9;\r\n    color: #fff;\r\n    font-size: 0.14rem;\r\n    text-align: center;\r\n  }\r\n}\r\n</style>"],"mappings":"AAyEA,SAASA,QAAO,QAAS,KAAK;AAC9B,SAASC,QAAO,QAAS,MAAM;AAC/B,SAASC,QAAO,QAAS,YAAY;AACrC,SAASC,mBAAkB,QAAS,oBAAoB;;AAExD;AACA,MAAMC,aAAY,GAAKC,MAAM,IAAK;EAChC,MAAM;IAAEC;EAAmB,IAAIH,mBAAmB,EAAE;EAEpD,MAAMI,KAAI,GAAIN,QAAQ,EAAE;EACxB,MAAMO,QAAO,GAAID,KAAK,CAACE,KAAK,CAACD,QAAQ;EACrC;EACA,MAAME,KAAI,GAAIV,QAAQ,CAAC,MAAM;IAC3B,MAAMW,WAAU,GAAIH,QAAQ,CAACH,MAAM,CAAC;IACpC,IAAIO,KAAI,GAAI,CAAC;IACb,IAAID,WAAW,EAAE;MACf,KAAK,IAAIE,CAAA,IAAKF,WAAW,EAAE;QACzB,MAAMG,OAAM,GAAIH,WAAW,CAACE,CAAC,CAAC;QAC9BD,KAAI,IAAKE,O