{"ast":null,"code":"import { reactive, toRefs } from \"vue\";\nimport { useRoute } from \"vue-router\";\nimport { get } from \"../../utils/request\";\nconst CATEGORIES = [{\n  name: \"全部商品\",\n  tab: \"all\"\n}, {\n  name: \"秒杀\",\n  tab: \"seckill\"\n}, {\n  name: \"新鲜水果\",\n  tab: \"fruit\"\n}];\nexport default {\n  name: \"Content\",\n  setup() {\n    const categories = [];\n    const data = reactive({\n      currentTab: categories[0].tab,\n      contentList: []\n    });\n    const route = useRoute();\n    const getContentData = async tab => {\n      const result = await get(`/api/shop/${route.params.id}/products`, {\n        tab\n      });\n      if (result?.errno === 0 && result?.data?.length) {\n        data.contentList = result.data;\n      }\n    };\n    const handleCategoryClick = tab => {\n      getContentData(tab), data.currentTab = tab;\n    };\n    getContentData(\"all\");\n    const {\n      contentList,\n      currentTab\n    } = toRefs(data);\n    return {\n      contentList,\n      categories,\n      currentTab,\n      handleCategoryClick\n    };\n  }\n};","map":{"version":3,"names":["reactive","toRefs","useRoute","get","CATEGORIES","name","tab","setup","categories","data","currentTab","contentList","route","getContentData","result","params","id","errno","length","handleCategoryClick"],"sources":["F:\\Web2022\\week23-25\\shengxian\\src\\views\\shop\\Content.vue"],"sourcesContent":["<template>\r\n  <div class=\"content\">\r\n    <div class=\"category\">\r\n      <div\r\n        :class=\"{\r\n          category__item: true,\r\n          'category__item--active': currentTab === item.tab,\r\n        }\"\r\n        v-for=\"item in categories\"\r\n        :key=\"item.name\"\r\n        @click=\"() => handleCategoryClick(item.tab)\"\r\n      >\r\n        {{ item.name }}\r\n      </div>\r\n    </div>\r\n    <div class=\"product\">\r\n      <div class=\"product__item\" v-for=\"item in contentList\" :key=\"item._id\">\r\n        <img class=\"product__item__img\" :src=\"`${item.imgUrl}`\" />\r\n        <div class=\"product__item__detail\">\r\n          <h4 class=\"product__item__title\">{{ item.name }}</h4>\r\n          <p class=\"product__item__sales\">月售{{ item.sales }}件</p>\r\n          <p class=\"product__item__price\">\r\n            <span class=\"product__item__yen\">&yen;</span>{{ item.price }}\r\n            <span class=\"product__item__origin\">&yen;{{ item.oldPrice }}</span>\r\n          </p>\r\n        </div>\r\n        <div class=\"product__number\">\r\n          <span class=\"product__number__minus\">-</span>\r\n          0\r\n          <span class=\"product__number__plus\">+</span>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nimport { reactive, toRefs } from \"vue\";\r\nimport { useRoute } from \"vue-router\";\r\nimport { get } from \"../../utils/request\";\r\n\r\nconst CATEGORIES = [\r\n  { name: \"全部商品\", tab: \"all\" },\r\n  { name: \"秒杀\", tab: \"seckill\" },\r\n  { name: \"新鲜水果\", tab: \"fruit\" },\r\n];\r\nexport default {\r\n  name: \"Content\",\r\n  setup() {\r\n    const categories = [];\r\n    const data = reactive({\r\n      currentTab: categories[0].tab,\r\n      contentList: [],\r\n    });\r\n    const route = useRoute();\r\n    const getContentData = async (tab) => {\r\n      const result = await get(`/api/shop/${route.params.id}/products`, {\r\n        tab,\r\n      });\r\n      if (result?.errno === 0 && result?.data?.length) {\r\n        data.contentList = result.data;\r\n      }\r\n    };\r\n    const handleCategoryClick = (tab) => {\r\n      getContentData(tab), (data.currentTab = tab);\r\n    };\r\n    getContentData(\"all\");\r\n    const { contentList, currentTab } = toRefs(data);\r\n    return { contentList, categories, currentTab, handleCategoryClick };\r\n  },\r\n};\r\n</script>\r\n<style lang=\"scss\" scoped>\r\n@import \"../../style/viriables.scss\";\r\n@import \"../../style/mixins.scss\";\r\n.content {\r\n  display: flex;\r\n  position: absolute;\r\n  left: 0;\r\n  right: 0;\r\n  top: 1.5rem;\r\n  bottom: 0.5rem;\r\n  margin-top: 0.16rem;\r\n}\r\n.category {\r\n  overflow-y: scroll;\r\n  height: 100%;\r\n  width: 0.76rem;\r\n  background: $search-bgColor;\r\n  &__item {\r\n    line-height: 0.4rem;\r\n    text-align: center;\r\n    font-size: 0.14rem;\r\n    color: $content-fontcolor;\r\n    &--active {\r\n      background: $bgColor;\r\n    }\r\n  }\r\n}\r\n.product {\r\n  overflow-y: scroll;\r\n  flex: 1;\r\n  &__item {\r\n    position: relative;\r\n    display: flex;\r\n    padding: 0.12rem 0;\r\n    margin: 0 0.16rem;\r\n    border-bottom: 0.01rem solid $content-bgColor;\r\n    &__detail {\r\n      overflow: hidden;\r\n    }\r\n    &__img {\r\n      width: 0.68rem;\r\n      height: 0.68rem;\r\n      margin-right: 0.16rem;\r\n    }\r\n    &__title {\r\n      margin: 0;\r\n      line-height: 0.2rem;\r\n      font-size: 0.14rem;\r\n      color: $content-fontcolor;\r\n      @include ellipsis;\r\n    }\r\n    &__sales {\r\n      margin: 0.06rem 0;\r\n      line-height: 0.16rem;\r\n      font-size: 0.12rem;\r\n      color: $content-fontcolor;\r\n    }\r\n    &__price {\r\n      margin: 0;\r\n      line-height: 0.2rem;\r\n      font-size: 0.14rem;\r\n      color: $hightlight-fontColor;\r\n    }\r\n    &__yen {\r\n      font-size: 0.12rem;\r\n    }\r\n    &__origin {\r\n      margin-left: 0.06rem;\r\n      line-height: 0.2rem;\r\n      font-size: 0.12rem;\r\n      color: $light-fontColor;\r\n      text-decoration: line-through;\r\n    }\r\n    .product__number {\r\n      position: absolute;\r\n      right: 0rem;\r\n      bottom: 0.12rem;\r\n      &__minus,\r\n      &__plus {\r\n        display: inline-block;\r\n        width: 0.2rem;\r\n        height: 0.2rem;\r\n        line-height: 0.16rem;\r\n        border-radius: 50%;\r\n        font-size: 0.2rem;\r\n        text-align: center;\r\n      }\r\n      &__minus {\r\n        border: 0.01rem solid $medium-fontColor;\r\n        color: $medium-fontColor;\r\n        margin-right: 0.05rem;\r\n      }\r\n      &__plus {\r\n        background: $btn-bgColor;\r\n        color: $bgColor;\r\n        margin-left: 0.05rem;\r\n      }\r\n    }\r\n  }\r\n}\r\n</style>"],"mappings":"AAoCA,SAASA,QAAQ,EAAEC,MAAK,QAAS,KAAK;AACtC,SAASC,QAAO,QAAS,YAAY;AACrC,SAASC,GAAE,QAAS,qBAAqB;AAEzC,MAAMC,UAAS,GAAI,CACjB;EAAEC,IAAI,EAAE,MAAM;EAAEC,GAAG,EAAE;AAAM,CAAC,EAC5B;EAAED,IAAI,EAAE,IAAI;EAAEC,GAAG,EAAE;AAAU,CAAC,EAC9B;EAAED,IAAI,EAAE,MAAM;EAAEC,GAAG,EAAE;AAAQ,CAAC,CAC/B;AACD,eAAe;EACbD,IAAI,EAAE,SAAS;EACfE,KAAKA,CAAA,EAAG;IACN,MAAMC,UAAS,GAAI,EAAE;IACrB,MAAMC,IAAG,GAAIT,QAAQ,CAAC;MACpBU,UAAU,EAAEF,UAAU,CAAC,CAAC,CAAC,CAACF,GAAG;MAC7BK,WAAW,EAAE;IACf,CAAC,CAAC;IACF,MAAMC,KAAI,GAAIV,QAAQ,EAAE;IACxB,MAAMW,cAAa,GAAI,MAAOP,GAAG,IAAK;MACpC,MAAMQ,MAAK,GAAI,MAAMX,GAAG,CAAE,aAAYS,KAAK,CAACG,MAAM,CAACC,EAAG,WAAU,EAAE;QAChEV;MACF,CAAC,CAAC;MACF,IAAIQ,MAAM,EAAEG,KAAI,KAAM,KAAKH,MAAM,EAAEL,IAAI,EAAES,MAAM,EAAE;QAC/CT,IAAI,CAACE,WAAU,GAAIG,MAAM,CAACL,IAAI;MAChC;IACF,CAAC;IACD,MAAMU,mBAAkB,GAAKb,GAAG,IAAK;MACnCO,cAAc,CAACP,GAAG,CAAC,EAAGG,IAAI,CAACC,UAAS,GAAIJ,GAAI;IAC9C,CAAC;IACDO,cAAc,CAAC,KAAK,CAAC;IACrB,MAAM;MAAEF,WAAW;MAAED;IAAW,IAAIT,MAAM,CAACQ,IAAI,CAAC;IAChD,OAAO;MAAEE,WAAW;MAAEH,UAAU;MAAEE,UAAU;MAAES;IAAoB,CAAC;EACrE;AACF,CAAC"},"metadata":{},"sourceType":"module","externalDependencies":[]}